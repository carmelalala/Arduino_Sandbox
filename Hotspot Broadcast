#include <ESP8266WiFi.h>

const char *ssid = "WaterQualityTest"; // Name of the hotspot network
const char *password = "12345678"; // Password for the hotspot network

void setup() {
  Serial.begin(115200);
  delay(100);

  // Set the ESP8266 to AP mode
  WiFi.mode(WIFI_AP);

  // Configure the hotspot network
  if (WiFi.softAP(ssid, password)) {
    Serial.println("Hotspot Network Created");
  } else {
    Serial.println("Failed to create Hotspot Network");
  }
}

void loop() {
  // Print the IP address of the hotspot network
  Serial.print("IP Address: ");
  Serial.println(WiFi.softAPIP());

  // Wait for a second before printing again
  delay(1000);
}
